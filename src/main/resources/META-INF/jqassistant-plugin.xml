<jqa-plugin:jqassistant-plugin xmlns:jqa-plugin="http://www.buschmais.com/jqassistant/core/analysis/plugin/schema/v1.0">
    <description>Provides a scanner for persistence.xml descriptors and rules for JPA2 specific elements (e.g. entities).</description>
    <store>
        <type>com.buschmais.jqassistant.plugin.jpa2.impl.store.descriptor.PersistenceDescriptor</type>
        <type>com.buschmais.jqassistant.plugin.jpa2.impl.store.descriptor.PersistenceUnitDescriptor</type>
    </store>
    <scanner>
        <plugin>com.buschmais.jqassistant.plugin.jpa2.impl.scanner.PersistenceScannerPlugin</plugin>
    </scanner>
    <rules>
        <resources>
            <resource>jpa2.xml</resource>
        </resources>
    </rules>
</jqa-plugin:jqassistant-plugin>